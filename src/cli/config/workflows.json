{
  "workflows": {
    "planning": {
      "id": "planning",
      "name": "Planning Workflow",
      "description": "Break down features into tasks and assign to engineers",
      "agent": "engineering-manager",
      "steps": [
        {
          "id": "analyze",
          "name": "Analyze Request",
          "action": "Parse and understand the feature request"
        },
        {
          "id": "requirements",
          "name": "Extract Requirements",
          "action": "Identify specific requirements and acceptance criteria"
        },
        {
          "id": "breakdown",
          "name": "Task Breakdown",
          "action": "Break into smaller, implementable tasks"
        },
        {
          "id": "prioritize",
          "name": "Prioritize Tasks",
          "action": "Order by dependencies and importance"
        },
        {
          "id": "assign",
          "name": "Assign Tasks",
          "action": "Delegate tasks to software engineer"
        }
      ]
    },
    "implementation": {
      "id": "implementation",
      "name": "Implementation Workflow",
      "description": "Implement code based on task specifications",
      "agent": "software-engineer",
      "steps": [
        {
          "id": "understand",
          "name": "Understand Task",
          "action": "Review task requirements and context"
        },
        {
          "id": "locate",
          "name": "Locate Files",
          "action": "Find relevant files to modify or create"
        },
        {
          "id": "implement",
          "name": "Write Code",
          "action": "Implement the required functionality"
        },
        {
          "id": "verify",
          "name": "Self-Review",
          "action": "Check implementation against requirements"
        },
        {
          "id": "report",
          "name": "Report Completion",
          "action": "Notify manager of completion"
        }
      ]
    },
    "review": {
      "id": "review",
      "name": "Review Workflow",
      "description": "Review code changes for quality and correctness",
      "agent": "engineering-manager",
      "steps": [
        {
          "id": "read",
          "name": "Read Changes",
          "action": "Review the code changes"
        },
        {
          "id": "analyze",
          "name": "Analyze Quality",
          "action": "Check for patterns, bugs, and improvements"
        },
        {
          "id": "feedback",
          "name": "Provide Feedback",
          "action": "Approve or request changes"
        }
      ]
    },
    "testing": {
      "id": "testing",
      "name": "Testing Workflow",
      "description": "Run tests and verify functionality",
      "agent": "software-engineer",
      "steps": [
        {
          "id": "identify",
          "name": "Identify Tests",
          "action": "Find relevant test files and commands"
        },
        {
          "id": "run",
          "name": "Run Tests",
          "action": "Execute test suite"
        },
        {
          "id": "analyze",
          "name": "Analyze Results",
          "action": "Review pass/fail status"
        },
        {
          "id": "report",
          "name": "Report Results",
          "action": "Send test results to manager"
        }
      ]
    },
    "debugging": {
      "id": "debugging",
      "name": "Debugging Workflow",
      "description": "Analyze and fix errors",
      "agent": "software-engineer",
      "steps": [
        {
          "id": "reproduce",
          "name": "Reproduce Error",
          "action": "Understand and reproduce the issue"
        },
        {
          "id": "analyze",
          "name": "Analyze Stack Trace",
          "action": "Examine error messages and stack traces"
        },
        {
          "id": "locate",
          "name": "Locate Root Cause",
          "action": "Find the source of the problem"
        },
        {
          "id": "fix",
          "name": "Implement Fix",
          "action": "Write code to resolve the issue"
        },
        {
          "id": "verify",
          "name": "Verify Fix",
          "action": "Confirm the error is resolved"
        }
      ]
    }
  }
}
