{
  "agents": {
    "engineering-manager": {
      "id": "engineering-manager",
      "name": "Engineering Manager",
      "role": "Planning, architecture, and code review",
      "capabilities": ["plan", "review", "architect", "prioritize", "requirements"],
      "canDelegateTo": ["software-engineer"],
      "workflows": ["planning", "review"],
      "prompts": {
        "plan": "Break down the feature into actionable tasks",
        "review": "Review the code for quality, patterns, and potential issues",
        "architect": "Design the system architecture and component structure",
        "prioritize": "Order tasks by importance and dependencies",
        "requirements": "Extract clear requirements from the description"
      }
    },
    "software-engineer": {
      "id": "software-engineer",
      "name": "Software Engineer",
      "role": "Implementation, testing, and debugging",
      "capabilities": ["implement", "test", "debug", "refactor", "document"],
      "reportsTo": "engineering-manager",
      "workflows": ["implementation", "testing"],
      "prompts": {
        "implement": "Write code following the specifications",
        "test": "Run tests and verify functionality",
        "debug": "Analyze errors and identify root causes",
        "refactor": "Improve code structure and readability",
        "document": "Add documentation and comments"
      }
    }
  },
  "messageTypes": [
    "task-assignment",
    "status-update",
    "review-request",
    "review-feedback",
    "question",
    "answer",
    "completion",
    "error"
  ],
  "taskStatuses": [
    "pending",
    "in_progress",
    "review",
    "completed",
    "blocked"
  ]
}
