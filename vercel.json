{
  "rewrites": [
    {
      "source": "/sign/:path*",
      "destination": "/index.html"
    },
    {
      "source": "/view/:path*",
      "destination": "/index.html"
    },
    {
      "source": "/((?!assets|sw\\.js|favicon\\.ico|robots\\.txt|manifest\\.json|.*\\..*).*)",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/sw.js",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "no-cache, no-store, must-revalidate"
        }
      ]
    },
    {
      "source": "/manifest.json",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=3600"
        },
        {
          "key": "Content-Type",
          "value": "application/manifest+json"
        }
      ]
    },
    {
      "source": "/icons/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=86400"
        }
      ]
    }
  ]
}
